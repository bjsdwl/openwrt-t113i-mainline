 {
+	{
+		/* [DEBUG] PRE-CLOCK LED INIT */
+		/* 1. Enable CCU Bus Clock Gate (Critical for GPIO) */
+		*(volatile unsigned int *)(0x0200190C) |= 0x00010001;
+
+		/* 2. Turn ON PG11 (Schematic LED) */
+		/* PG_CFG1 (0x020000DC): Set [14:12] to 001 (Output) */
+		*(volatile unsigned int *)(0x020000DC) = (*(volatile unsigned int *)(0x020000DC) & ~(0x7 << 12)) | (0x1 << 12);
+		/* PG_DAT (0x020000E8): Set bit 11 High */
+		*(volatile unsigned int *)(0x020000E8) |= (1 << 11);
+
+		/* 3. Turn ON PC0 (Datasheet LED) */
+		/* PC_CFG0 (0x02000048): Set [2:0] to 001 (Output) */
+		*(volatile unsigned int *)(0x02000048) = (*(volatile unsigned int *)(0x02000048) & ~(0x7 << 0)) | (0x1 << 0);
+		/* PC_DAT (0x02000058): Set bit 0 High */
+		*(volatile unsigned int *)(0x02000058) |= (1 << 0);
+
+		/* 4. Force UART0 (PG17/18) Pinmux */
+		/* PG_CFG2 (0x020000E0): PG17[6:4]=7, PG18[10:8]=7 */
+		*(volatile unsigned int *)(0x020000E0) = (*(volatile unsigned int *)(0x020000E0) & ~(0x77 << 4)) | (0x77 << 4);
+	}
