--- a/arch/arm/mach-sunxi/board.c
+++ b/arch/arm/mach-sunxi/board.c
@@ -340,8 +340,32 @@
 void board_init_f(ulong dummy)
 {
 	spl_init();
+
+	/* 1. ENTRY: LED ON (PC0) */
+	*(volatile u32 *)(0x02000060) &= ~(0xF << 0);
+	*(volatile u32 *)(0x02000060) |=  (0x1 << 0);
+	*(volatile u32 *)(0x02000070) |=  (1 << 0);
+
 	preloader_console_init();
 
+	/* 2. BEFORE DRAM: LED OFF */
+	{
+		volatile int i;
+		for (i = 0; i < 500000; i++); /* Delay */
+		*(volatile u32 *)(0x02000070) &= ~(1 << 0);
+		for (i = 0; i < 500000; i++); /* Delay */
+	}
+
 #if defined(CONFIG_SPL_I2C) && defined(CONFIG_SPL_SYS_I2C_LEGACY)
 	/* This can cost up to 20ms of time, but we may need it for DRAM */
 	i2c_init(CONFIG_SYS_I2C_SPEED, CONFIG_SYS_I2C_SLAVE);
@@ -350,6 +370,9 @@
 	/* DRAM init */
 	sunxi_dram_init();
 
+	/* 3. AFTER DRAM: LED ON */
+	*(volatile u32 *)(0x02000070) |= (1 << 0);
+
 #if defined(CONFIG_SPL_I2C) && defined(CONFIG_SPL_SYS_I2C_LEGACY)
 	i2c_init(CONFIG_SYS_I2C_SPEED, CONFIG_SYS_I2C_SLAVE);
 #endif
