@@ -459,6 +459,45 @@ u32 spl_mmc_boot_mode(struct mmc *mmc, c
 
 void board_init_f(ulong dummy)
 {
+	/* --- T113-i UART CLOCK FIX & DUAL OUTPUT --- */
+	{
+		/* Clocks Addresses */
+		volatile unsigned int *ccu_pio  = (volatile unsigned int *)0x0200190C;
+		volatile unsigned int *ccu_uart = (volatile unsigned int *)0x02001934;
+
+		/* GPIO Addresses */
+		volatile unsigned int *pc_cfg  = (volatile unsigned int *)0x02000060;
+		volatile unsigned int *pc_dat  = (volatile unsigned int *)0x02000070;
+		volatile unsigned int *pg_cfg2 = (volatile unsigned int *)0x020000E0;
+
+		/* 1. ENABLE CLOCKS (Critical Fix) */
+		*ccu_pio  = 0x00010001;  /* Enable GPIO Gate */
+		*ccu_uart = 0x000F000F;  /* Enable UART0/1/2/3 Gate & Reset */
+
+		/* 2. LED ON */
+		*pc_cfg = (*pc_cfg & ~0xF) | 1;
+		*pc_dat |= 1;
+
+		/* 3. Pinmux: PG17/18 -> Function 7 */
+		*pg_cfg2 = (*pg_cfg2 & ~(0xFF << 4)) | (0x77 << 4);
+
+		/* 4. Init UART0 (0x02500000) & UART2 (0x02500800) */
+		volatile unsigned int *u0_base = (volatile unsigned int *)0x02500000;
+		volatile unsigned int *u2_base = (volatile unsigned int *)0x02500800;
+
+		/* Init UART0 */
+		u0_base[3] = 0x83; u0_base[0] = 13; u0_base[1] = 0; u0_base[3] = 0x03; u0_base[2] = 0x07;
+		/* Init UART2 */
+		u2_base[3] = 0x83; u2_base[0] = 13; u2_base[1] = 0; u2_base[3] = 0x03; u2_base[2] = 0x07;
+
+		/* 5. Send Characters */
+		/* Loop a few times to ensure transmission */
+		for(int i=0; i<5; i++) {
+			u0_base[0] = 0x30; /* ASCII '0' -> Sent to UART0 */
+			u2_base[0] = 0x32; /* ASCII '2' -> Sent to UART2 */
+			for(volatile int d=0; d<10000; d++);
+		}
+	}
 	sunxi_sram_init();
 
 	/* Enable non-secure access to some peripherals */
