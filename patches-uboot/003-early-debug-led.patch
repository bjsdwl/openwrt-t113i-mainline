 void board_init_f(ulong dummy)
 {
+	/* --- T113-i UART0 DEAD LOOP DEBUG --- */
+	{
+		volatile unsigned int *ccu_pio  = (volatile unsigned int *)0x0200190C;
+		volatile unsigned int *ccu_uart = (volatile unsigned int *)0x02001934;
+		volatile unsigned int *pc_cfg   = (volatile unsigned int *)0x02000060;
+		volatile unsigned int *pc_dat   = (volatile unsigned int *)0x02000070;
+		volatile unsigned int *pg_cfg2  = (volatile unsigned int *)0x020000E0;
+		/* UART0 Registers */
+		volatile unsigned int *u0_rbr = (volatile unsigned int *)0x02500000;
+		volatile unsigned int *u0_dlh = (volatile unsigned int *)0x02500004;
+		volatile unsigned int *u0_fcr = (volatile unsigned int *)0x02500008;
+		volatile unsigned int *u0_lcr = (volatile unsigned int *)0x0250000C;
+		volatile unsigned int *u0_lsr = (volatile unsigned int *)0x02500014;
+
+		/* 1. Reset & Enable Clocks */
+		*ccu_pio  = 0x00010001;
+		*ccu_uart = 0x00010001; /* Reset(bit16) + Gate(bit0) for UART0 only */
+		for(volatile int i=0; i<1000; i++); /* Wait for clock stabilization */
+
+		/* 2. Configure PC0 LED */
+		*pc_cfg = (*pc_cfg & ~0xF) | 1;
+
+		/* 3. Configure PG17/18 -> Function 7 (UART0) */
+		*pg_cfg2 = (*pg_cfg2 & ~(0xFF << 4)) | (0x77 << 4);
+
+		/* 4. Init UART0 (24MHz -> 115200) */
+		*u0_lcr = 0x83;       /* DLAB=1 */
+		*u0_rbr = 13;         /* DLL=13 */
+		*u0_dlh = 0;          /* DLH=0 */
+		*u0_lcr = 0x03;       /* DLAB=0, 8n1 */
+		*u0_fcr = 0x07;       /* Enable & Reset FIFO */
+		for(volatile int i=0; i<1000; i++);
+
+		/* 5. MACHINE GUN LOOP */
+		while(1) {
+			/* A. Wait for TX Ready (Bit 5: THRE) */
+			/* If stuck here -> UART Clock issue */
+			while (!(*u0_lsr & 0x20));
+
+			/* B. Send Character */
+			*u0_rbr = 0x55; /* ASCII 'U' */
+
+			/* C. Blink LED to indicate life */
+			*pc_dat ^= 1;
+
+			/* D. Delay ~0.1s */
+			for(volatile int d=0; d<600000; d++);
+		}
+	}
 	sunxi_sram_init();
 
