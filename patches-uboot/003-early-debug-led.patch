+	
+	/* TRONLONG T113-i DEBUG LED (PC0) FORCE ON - FIXED ADDRESS */
+	{
+		/* 
+		 * T113-i PIO Base: 0x02000000
+		 * Port C (Bank 2) Offset: 2 * 0x30 = 0x60
+		 * PC_CFG0: 0x02000000 + 0x60 = 0x02000060 
+		 * PC_DAT:  0x02000000 + 0x70 = 0x02000070
+		 */
+		volatile u32 *cfg = (volatile u32 *)(0x02000060);
+		volatile u32 *dat = (volatile u32 *)(0x02000070);
+		
+		/* Set PC0 to Output (001) at bits 3:0 */
+		/* Mask: 0xFFFFFFF0, Value: 0x00000001 */
+		*cfg &= ~(0xF << 0);
+		*cfg |=  (0x1 << 0);
+		
+		/* Set PC0 High (LED ON) at bit 0 */
+		*dat |=  (1 << 0);
+	}
+
