 void board_init_f(ulong dummy)
 {
+	/* --- T113-i CLOCK & UART TEST --- */
+	{
+		volatile unsigned int *ccu_gate = (volatile unsigned int *)0x0200190C;
+		volatile unsigned int *pc_cfg  = (volatile unsigned int *)0x02000060;
+		volatile unsigned int *pc_dat  = (volatile unsigned int *)0x02000070;
+		volatile unsigned int *pg_cfg2 = (volatile unsigned int *)0x020000E0;
+
+		/* 1. Enable Clock */
+		*ccu_gate = 0x00010001;
+
+		/* 2. Setup PC0 as Output */
+		*pc_cfg &= ~(0xF);     // Clear
+		*pc_cfg |= 1;          // Output
+
+		/* 3. Setup PG17/18 as Function 2 (UART2) */
+		/* PG17[7:4], PG18[11:8]. Function 2 = 0010 (binary) = 0x2 */
+		*pg_cfg2 &= ~(0xFF << 4);  // Clear bits 4-11
+		*pg_cfg2 |= (0x22 << 4);   // Set 0x2 for both
+
+		/* 4. BLINK LOOP (FOREVER) */
+		while(1) {
+			*pc_dat ^= (1 << 0);  // Toggle PC0
+
+			/* Delay Loop: 10 Million */
+			for (volatile int i = 0; i < 10000000; i++);
+		}
+	}
 	sunxi_sram_init();
 
