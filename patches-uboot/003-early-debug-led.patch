--- u-boot-2025.01.orig/arch/arm/mach-sunxi/board.c
+++ u-boot-2025.01/arch/arm/mach-sunxi/board.c
@@ -469,6 +469,30 @@ void board_init_f(ulong dummy)
 	gpio_init();
 
 	spl_init();
+	/* --- RECOVERED GOLDEN STATE (T113-i) --- */
+	/* Placed AFTER spl_init() to ensure system clocks are ready */
+	{
+		volatile unsigned int *ccu_pio  = (volatile unsigned int *)0x0200190C;
+		volatile unsigned int *pc_cfg   = (volatile unsigned int *)0x02000060;
+		volatile unsigned int *pc_dat   = (volatile unsigned int *)0x02000070;
+		volatile unsigned int *pg_cfg2  = (volatile unsigned int *)0x020000E0;
+		/* Address from your previous success log (just in case) */
+		volatile unsigned int *mystery  = (volatile unsigned int *)0x02000128;
+
+		/* 1. Force Enable PIO Clock */
+		*ccu_pio = 0x00010001;
+
+		/* 2. Configure PG17/PG18 -> Function 7 (UART0) */
+		/* We write to BOTH standard address and your log address */
+		*pg_cfg2 = (*pg_cfg2 & ~(0xFF << 4)) | (0x77 << 4);
+		*mystery = (*mystery & ~(0xFF << 4)) | (0x77 << 4);
+
+		/* 3. Turn on PC0 LED (Status Indicator) */
+		*pc_cfg = (*pc_cfg & ~0xF) | 1;
+		*pc_dat |= 1;
+
+		/* 4. Let standard driver take over from here... */
+	}
 	preloader_console_init();
 
 #if CONFIG_IS_ENABLED(I2C) && CONFIG_IS_ENABLED(SYS_I2C_LEGACY)
