 void board_init_f(ulong dummy)
 {
+	{
+		/* [VIOLENT INIT] Force Hardware State */
+		/* 1. CCU: Enable BUS_CLK_GATE2 (PIO/UART) @ 0x0200190C */
+		*(volatile unsigned int *)(0x0200190C) |= 0x00010001;
+
+		/* 2. PINMUX: Force PG17/18 to UART0 (Func 7) */
+		/* PG_CFG2 (0x020000E0): PG17[6:4]=111, PG18[10:8]=111 */
+		*(volatile unsigned int *)(0x020000E0) = (*(volatile unsigned int *)(0x020000E0) & ~(0x770)) | (0x770);
+
+		/* 3. LED: Force PG11 High (Green LED) */
+		/* PG_CFG1 (0x020000DC): PG11[14:12]=001 (Output) */
+		*(volatile unsigned int *)(0x020000DC) = (*(volatile unsigned int *)(0x020000DC) & ~(0x7000)) | (0x1000);
+		/* PG_DAT (0x020000E8): Set bit 11 */
+		*(volatile unsigned int *)(0x020000E8) |= (1 << 11);
+	}
 	sunxi_sram_init();
 
