@@ -469,6 +472,32 @@ void board_init_f(ulong dummy)
 	gpio_init();
 
 	spl_init();
+	/* --- RESET KILL SWITCH TEST --- */
+	{
+		volatile unsigned int *pc_dat = (volatile unsigned int *)0x02000070;
+		volatile unsigned int *pc_cfg = (volatile unsigned int *)0x02000060;
+		volatile unsigned int *ccu_bg = (volatile unsigned int *)0x0200190C;
+		*ccu_bg = 0x00010001; *pc_cfg = (*pc_cfg & ~0xF) | 1;
+		
+		/* 1. LIGHT ON */
+		*pc_dat |= 1;
+		for(int i=0; i<15000000; i++) asm("nop"); /* Wait to see it */
+		
+		spl_init();
+		
+		struct reset_ctl rst;
+		ofnode pio_node = ofnode_path("/soc/pinctrl@0300b000");
+		if (!ofnode_valid(pio_node)) pio_node = ofnode_path("/soc/pinctrl@2000000"); /* Try both addresses */
+		
+		/* 2. ATTEMPT TO KILL PIO */
+		if (ofnode_valid(pio_node)) {
+			if (reset_get_by_index_nodev(pio_node, 0, &rst) == 0) {
+				reset_assert(&rst);
+			}
+		}
+		
+		while(0);
+	}
 	preloader_console_init();
 
