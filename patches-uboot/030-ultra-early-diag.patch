--- u-boot-2025.01.orig/arch/arm/mach-sunxi/board.c
+++ u-boot-2025.01/arch/arm/mach-sunxi/board.c
@@ -459,6 +459,37 @@ u32 spl_mmc_boot_mode(struct mmc *mmc, c
 
 void board_init_f(ulong dummy)
 {
+	/* 1. 解锁电源门控 (PG/PF/PC 通道) */
+	*(volatile unsigned int *)0x02000128 = 0x00000074;
+
+	/* 2. 点亮 PC0 上的 LED (用于视觉证明 SPL 已运行) */
+	/* PC_CFG0 地址: 0x02000060 (控制 PC0-PC7) */
+	/* 将 PC0 (Bits[3:0]) 设置为 0x01 (Output 模式) */
+	*(volatile unsigned int *)0x02000060 &= ~0x0000000f;
+	*(volatile unsigned int *)0x02000060 |=  0x00000001;
+	/* PC_DAT 地址: 0x02000070 (数据寄存器) */
+	/* 将 PC0 (Bit 0) 设置为 1 (高电平点亮，如果 LED 是共阴极) */
+	*(volatile unsigned int *)0x02000070 |=  0x00000001;
+
+	/* 3. 开启 UART0 总线时钟并解除复位 */
+	*(volatile unsigned int *)0x0200190c |= ((1 << 16) | (1 << 0));
+
+	/* 4. 配置 PG17, PG18 为 UART0 功能 (Func 2) */
+	*(volatile unsigned int *)0x020001e0 &= ~0x00000ff0; 
+	*(volatile unsigned int *)0x020001e0 |=  0x00000220;  
+
+	/* 5. 暴力吐字 'L' 到串口 (0x02500000) */
+	for(int i=0; i<10000; i++) {
+		if(*(volatile unsigned int *)0x02500014 & 0x20) break;
+	}
+	*(volatile unsigned int *)0x02500000 = 0x4c;
+	
+	/* 6. 暴力吐换行 */
+	for(int i=0; i<10000; i++) {
+		if(*(volatile unsigned int *)0x02500014 & 0x20) break;
+	}
+	*(volatile unsigned int *)0x02500000 = 0x0a;
+
 	sunxi_sram_init();
 
 	/* Enable non-secure access to some peripherals */
