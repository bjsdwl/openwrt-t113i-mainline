Index: u-boot-2025.01/arch/arm/dts/sun8i-t113-tronlong.dts
===================================================================
--- /dev/null
+++ u-boot-2025.01/arch/arm/dts/sun8i-t113-tronlong.dts
@@ -0,0 +1,72 @@
+/dts-v1/;
+#include "sun8i-t113s.dtsi"
+#include <dt-bindings/gpio/gpio.h>
+
+/ {
+    model = "Tronlong TLT113-MiniEVM";
+    compatible = "tronlong,tlt113-minievm", "allwinner,sun8i-t113i", "allwinner,sun8i-t113s";
+
+    aliases { serial0 = &uart0; mmc0 = &mmc0; };
+    chosen { stdout-path = "serial0:115200n8"; };
+    
+    /* 1. LED 可见 */
+    leds {
+        compatible = "gpio-leds";
+        bootph-all;
+        
+        led-0 {
+            label = "heartbeat";
+            gpios = <&pio 2 0 GPIO_ACTIVE_HIGH>; /* PC0 */
+            default-state = "on";
+            bootph-all;
+        };
+    };
+    
+    reg_vcc3v3: vcc3v3 {
+        compatible = "regulator-fixed";
+        regulator-name = "vcc-3v3";
+        regulator-min-microvolt = <3300000>;
+        regulator-max-microvolt = <3300000>;
+        regulator-always-on;
+    };
+};
+
+/* 2. CCU 时钟控制器可见 (关键新增！) */
+&ccu {
+    bootph-all;
+};
+
+/* 3. PIO 可见 */
+&pio { 
+    bootph-all; 
+    
+    uart0_pg_pins: uart0-pg-pins {
+        pins = "PG17", "PG18";
+        function = "uart0";
+    };
+
+    mmc0_pins: mmc0-pins {
+        pins = "PF0", "PF1", "PF2", "PF3", "PF4", "PF5";
+        function = "sdc0";
+        drive-strength = <30>;
+        bias-pull-up;
+    };
+};
+
+/* 4. 外设引用 (注意：UART0 未加 bootph-all) */
+&uart0 { 
+    pinctrl-names = "default"; 
+    pinctrl-0 = <&uart0_pg_pins>; 
+    status = "okay"; 
+};
+
+&mmc0 {
+    pinctrl-names = "default";
+    pinctrl-0 = <&mmc0_pins>;
+    vmmc-supply = <&reg_vcc3v3>;
+    vqmmc-supply = <&reg_vcc3v3>;
+    bus-width = <4>;
+    no-1-8-v;
+    broken-cd;
+    status = "okay";
+};
