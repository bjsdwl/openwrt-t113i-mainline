Index: u-boot-2025.01/arch/arm/dts/sun8i-t113s-nc-nagami.dts
===================================================================
--- /dev/null
+++ u-boot-2025.01/arch/arm/dts/sun8i-t113s-nc-nagami.dts
@@ -0,0 +1,49 @@
+/dts-v1/;
+#include "sun8i-t113s.dtsi"
+#include <dt-bindings/gpio/gpio.h>
+
+/ {
+    model = "Tronlong TLT113-MiniEVM";
+    compatible = "tronlong,tlt113-minievm", "allwinner,sun8i-t113i";
+
+    aliases { serial0 = &uart0; mmc0 = &mmc0; };
+    chosen { stdout-path = "serial0:115200n8"; };
+
+    reg_vcc3v3: vcc3v3 {
+        compatible = "regulator-fixed";
+        regulator-name = "vcc-3v3";
+        regulator-min-microvolt = <3300000>;
+        regulator-max-microvolt = <3300000>;
+        regulator-always-on;
+        bootph-all;
+    };
+
+    /* 强制 Binman 在 128KB 处放置 Main U-Boot */
+    binman {
+        filename = "u-boot-sunxi-with-spl.bin";
+        pad-byte = <0xff>;
+        blob { filename = "spl/sunxi-spl.bin"; };
+        u-boot-img { offset = <0x20000>; };
+    };
+};
+
+&uart0 {
+    pinctrl-names = "default";
+    pinctrl-0 = <&uart0_pg_pins>;
+    status = "okay";
+    bootph-all;
+};
+
+&pio {
+    uart0_pg_pins: uart0-pg-pins {
+        pins = "PG17", "PG18";
+        function = "uart0";
+        bootph-all;
+    };
+};
+
+&mmc0 {
+    vmmc-supply = <&reg_vcc3v3>;
+    bus-width = <4>;
+    status = "okay";
+};
