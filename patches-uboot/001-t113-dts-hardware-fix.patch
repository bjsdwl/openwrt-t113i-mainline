Index: u-boot-2025.01/arch/arm/dts/sun8i-t113-tronlong.dts
===================================================================
--- /dev/null
+++ u-boot-2025.01/arch/arm/dts/sun8i-t113-tronlong.dts
@@ -0,0 +1,83 @@
+/dts-v1/;
+#include "sun8i-t113s.dtsi"
+#include <dt-bindings/gpio/gpio.h>
+#include <dt-bindings/leds/common.h>
+
+/ {
+    model = "Tronlong TLT113-MiniEVM";
+    compatible = "tronlong,tlt113-minievm", "allwinner,sun8i-t113i", "allwinner,sun8i-t113s";
+    aliases { 
+        serial0 = &uart0;
+        mmc0 = &mmc0;
+    };
+
+    leds {
+        compatible = "gpio-leds";
+        bootph-all;
+        led-0 {
+            label = "heartbeat";
+            gpios = <&pio 2 0 GPIO_ACTIVE_HIGH>; /* PC0 */
+            default-state = "on";
+            bootph-all;
+        };
+    };
+};
+
+&ccu { bootph-all; };
+
+/* 使用 D1 驱动 ID，确保匹配 */
+&pio { 
+    compatible = "allwinner,sun20i-d1-pinctrl";
+    bootph-all; 
+    
+    uart0_pg_pins: uart0-pg-pins {
+        pins = "PG17", "PG18";
+        function = "uart0";
+        bootph-all;
+    };
+    
+    mmc0_pins: mmc0-pins {
+        pins = "PF0", "PF1", "PF2", "PF3", "PF4", "PF5";
+        function = "sdc0";
+        drive-strength = <30>;
+        bias-pull-up;
+        bootph-all;
+    };
+};
+
+&uart0 {
+    pinctrl-names = "default";
+    pinctrl-0 = <&uart0_pg_pins>;
+    status = "okay";
+    bootph-all;
+};
+
+&mmc0 {
+    pinctrl-names = "default";
+    pinctrl-0 = <&mmc0_pins>;
+    vmmc-supply = <&reg_vcc3v3>;
+    vqmmc-supply = <&reg_vcc3v3>;
+    bus-width = <4>;
+    broken-cd;
+    status = "okay";
+    bootph-all;
+};
+
+/ {
+    clocks {
+        bootph-all;
+        osc24M { bootph-all; };
+    };
+    soc {
+        bootph-all;
+    };
+    
+    reg_vcc3v3: vcc3v3 {
+        compatible = "regulator-fixed";
+        regulator-name = "vcc-3v3";
+        regulator-min-microvolt = <3300000>;
+        regulator-max-microvolt = <3300000>;
+        regulator-always-on;
+        bootph-all;
+    };
+};
