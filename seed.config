# 平台基础配置
CONFIG_TARGET_sunxi=y
CONFIG_TARGET_sunxi_cortexa7=y
CONFIG_TARGET_sunxi_cortexa7_DEVICE_xunlong_orangepi-one=y

# 核心：选择我们要编译的 T113-i 专属 U-Boot 目标
CONFIG_PACKAGE_uboot-sunxi-nc_link_t113s3=y

# 取消其他无用目标的编译以节省磁盘空间和时间
# CONFIG_PACKAGE_uboot-sunxi-orangepi_one is not set
# CONFIG_PACKAGE_uboot-sunxi-nanopi_m1 is not set

# 基础系统组件 (最小化以缩短编译时间)
CONFIG_PACKAGE_kmod-usb-ohci=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb-storage=y
